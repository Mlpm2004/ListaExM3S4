@model IEnumerable<Exercicios.Models.CardapioModel>

@{
    ViewData["Title"] = "Index da Página de Cardapio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cardapios</h1>

<p>
    <a asp-action="Create">Novo Registro</a>
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            Ações
        </th>
    </tr>
    <tbody>
        @foreach (var CardapioModel in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => CardapioModel.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => CardapioModel.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => CardapioModel.Valor)
                </td>

                <td>
                    @Html.DisplayFor(model => CardapioModel.Ativo)
                </td>
                <td>
                    @Html.ActionLink("Editar", 
                                     "Edit", 
                                     "Cardapio", 
                                     new { id = @CardapioModel.Id}, 
                                     new { @class="btn btn-primary " } )
                    @Html.ActionLink("Deletar", 
                                     "Delete", 
                                     "Cardapio", 
                                     new { id = @CardapioModel.Id, descricao = @CardapioModel.Descricao }, 
                                     new { @class="btn btn-danger " } )
                </td>
            </tr>
        }
    </tbody>
</table>